@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using sag.Models
@model Produtos
@{
    ViewBag.Title = "Edição De Produto";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<h1>Edição De Produto</h1>

<div>
    <form asp-controller="Produtos" asp-action="Update" method="POST">
        <div class="form-group">
            <label for="Nome">Nome do Produto*</label>
            <input type="text" name="Nome" required="true" class="form-control" asp-for="Nome"/>
            <span asp-validation-for="Nome"></span>
        </div>
        <div class="form-group">
            <label for="Categoria">Categoria*</label>
            <input type="text" name="categoria" required="true" class="form-control" asp-for="Categoria"/>
            <span asp-validation-for="Categoria"></span>
        </div>

        <div class="form-group">
            <label for="Descricao">Descrição</label>
            <input type="text" name="Descricao" class="form-control" asp-for="Descricao"/>
            <span asp-validation-for="Descricao"></span>
        </div>
        <div class="form-group">
            <label for="Valor">Valor*</label>
            <input type="text" name="Valor" step="0.01" required="true" class="form-control" asp-for="Valor"/>
            <span asp-validation-for="Valor"></span>
        </div>

        <button class="btn btn-primary">Salvar</button>
        <a href="/Produtos/Index" class="btn btn-primary">Voltar</a>
    </form>
</div>