@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using sag.Models
@model Produtos
@{
    ViewBag.Title = "Novo Produto";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<head>       
    <link rel="stylesheet" href="~/css/produtos/create.css" />  
</head>
<body> 
    <div class="tabela-titulo">
        <form asp-controller="Produtos" asp-action="Create" method="POST">
            <div class="form-group">
                <label for="Nome">Nome do Produto*</label>
                <input type="text" name="Nome" required="true" class="form-control" asp-for="Nome"/>
                <span asp-validation-for="Nome"></span>
            </div>
            <div class="form-group">
                <label for="Categoria">Categoria*</label>
                <input type="text" name="categoria" required="true" class="form-control" asp-for="Categoria"/>
                <span asp-validation-for="Categoria"></span>
            </div>

            <div class="form-group">
                <label for="Descricao">Descrição</label>
                <input type="text" name="Descricao" class="form-control" asp-for="Descricao"/>
                <span asp-validation-for="Descricao"></span>
            </div>
            <div class="form-group">
                <label for="Valor">Valor*</label>
                <input type="text" step="0.01" name="Valor" class="form-control" asp-for="Valor"/>
                <span asp-validation-for="Valor"></span>
            </div>
            <div class="salvar">
                <button class="btn btn-primary" id="salvar">Salvar</button>
            </div>
            <div class="voltar">
                <a href="/Produtos/Index" class="btn btn-primary" id="voltar">Voltar</a>
            </div>

            
        </form>
    </div>
</body>