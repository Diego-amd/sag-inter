@using sag.Models
@model List<Produtos>
@{
    ViewBag.Title = "Lista de produtos";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<h1>Lista de Produtos - Teste</h1>

<table class="table table-hover">
    <tr>
        <th>Id</th>
        <th>Nome</th>
        <th>Categoria</th>
        <th>Descrição</th>
        <th>Valor</th>
        <th>Estado</th>
        <th>&nbsp;</th>
    </tr>

    @* <img src='/images/icon.png' /> *@
    <h1>Você tem @Model.Count produtos</h1>

    @if(ViewBag.Message != null) {
        <p class="alert alert-danger alert-message">@ViewBag.Message</p>
    }

    @foreach(var produtos in Model)
    {
        <tr>
            <td>@produtos.Id_produto</td>
            <td>@produtos.Nome</td>
            <td>@produtos.Categoria</td>
            <td>@produtos.Descricao</td>
            <td>@produtos.Valor</td>
            <td>@produtos.Estado</td>
            <td>
                <a href="/Produtos/Update/@produtos.Id_produto" class="btn btn-sm btn-primary">Editar</a>
                <a href="/Produtos/Disable/@produtos.Id_produto" class="btn btn-sm btn-danger">Desabilitar</a>
            </td>
        </tr>
    }

</table>

<a href="/Produtos/Create" class="btn btn-primary">Adicionar</a>