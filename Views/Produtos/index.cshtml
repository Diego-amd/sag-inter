@using sag.Models
@model List<Produtos>
@{
    ViewBag.Title = "Lista de produtos";
    Layout = "/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistema Administrativo Gastronômico</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100&display=swap" rel="stylesheet">    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />   
    <link rel="stylesheet" href="~/css/produtos/index.css" />  
</head>
<body class="produtos">
    <h4 style="color: black">Lista de Produtos - Teste</h4>
    <table class="table table-hover" id="tabela-titulo">
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Categoria</th>
            <th>Descrição</th>
            <th>Valor</th>
            <th>Estado</th>
            <th>&nbsp;</th>
        </tr>        
        <h4 style="color: black">Você tem @Model.Count produtos</h4>
        @if(ViewBag.Message != null) {
            <p class="alert alert-danger alert-message">@ViewBag.Message</p>
        }
        @foreach(var produtos in Model)
        {
            <tr>
                <td>@produtos.Id_produto</td>
                <td>@produtos.Nome</td>
                <td>@produtos.Categoria</td>
                <td>@produtos.Descricao</td>
                <td>@produtos.Valor</td>
                <td>@produtos.TextoEstado</td>
                <td>
                    <a href="/Produtos/Update/@produtos.Id_produto" class="btn btn-sm btn-primary">Editar</a>
                    <a href="/Produtos/Disable/@produtos.Id_produto" class="btn btn-sm btn-danger">Desabilitar</a>
                </td>
            </tr>
        }
    </table>
    <a href="/Produtos/Create" class="btn btn-primary">Adicionar</a>
</body>
</html>