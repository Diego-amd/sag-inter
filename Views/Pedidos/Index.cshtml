@model List<Pedidos>
@{
    ViewBag.Title = "Lista de Pedidos";
}
<head>
    <link rel="stylesheet" href="~/css/pedidos/index.css">
</head>
<body class="pedidos">
    <div class="msg1">
        <h1 id="msg1">Lista de Pedidos ðŸ“œ</h1>
    </div>
    
    <table class="tabela">
        <tr>
            <th>Id</th>
            <th>Nome / mesa do cliente</th>
            <th>Telefone do cliente</th>
            <th>Data de Entrada</th>
            <th>Hora de Entrada</th>
            <th>Hora de SaÃ­da</th>
            <th>Status</th>
            <th>Tipo de Pedido</th>
        </tr>

        <div class="msg2">
            <h1 id="msg2">VocÃª tem @Model.Count pedidos</h1>
        </div>
        

        @if(ViewBag.Mensagem != null) {
            <p class="alert alert-danger alert-message">@ViewBag.Mensagem</p>
        }

        @foreach(var pedido in Model)
        {
            <tr>
                <td class="tabela-info-td">@pedido.IdPedido</td>
                <td class="tabela-info-td">@pedido.NomeCliente</td>
                <td class="tabela-info-td">@pedido.TelCliente</td>
                <td class="tabela-info-td">@pedido.DataEntrada</td>
                <td class="tabela-info-td">@pedido.HoraEntrada</td>
                <td class="tabela-info-td">@pedido.HoraSaida</td>
                <td class="tabela-info-td">@pedido.TextoStatus</td>
                <td class="tabela-info-td">@pedido.TextoTipoPedido</td>
                <td class="botoes-cad">
                    <a href="/Pedidos/Update/@pedido.IdPedido" class="btn btn-sm btn-primary" id="finalizar">Finalizar</a>
                </td>
            </tr>
        }
    </table>
    <div class="adicionarB">
        <a href="/pedidos/create" class="btn btn-primary" id="adicionarB">Adicionar</a>
    </div>
   
</body>


