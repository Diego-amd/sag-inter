@using sag.Models
@model List<Pedidos>
@{
    ViewBag.Title = "Lista de Pedidos";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<h1>Lista de Pedidos - Teste</h1>

<table class="table table-hover">
    <tr>
        <th>Id</th>
        <th>Código do usuário</th>
        <th>Nome / mesa do cliente</th>
        <th>Telefone do cliente</th>
        <th>Data de Entrada</th>
        <th>Hora de Entrada</th>
        <th>Hora de Saída</th>
        <th>Status</th>
        <th>Tipo de Pedido</th>
        <th>&nbsp;</th>
    </tr>

    @* <img src='/images/icon.png' /> *@
    <h1>Você tem @Model.Count pedidos</h1>

    @if(ViewBag.Mensagem != null) {
        <p class="alert alert-danger alert-message">@ViewBag.Mensagem</p>
    }

    @foreach(var pedido in Model)
    {
        <tr>
            <td>@pedido.IdPedido</td>
            <td>@pedido.CodUsuario</td>
            <td>@pedido.NomeCliente</td>
            <td>@pedido.TelCliente</td>
            <td>@pedido.DataEntrada</td>
            <td>@pedido.HoraEntrada</td>
            <td>@pedido.HoraSaida</td>
            <td>@pedido.TextoStatus</td>
            <td>@pedido.TextoTipoPedido</td>
            <td>
                <a href="/Pedidos/Update/@pedido.IdPedido" class="btn btn-sm btn-primary">Finalizar pedido</a>
            </td>
        </tr>
    }

</table>

<a href="/pedidos/create" class="btn btn-primary">Adicionar</a>